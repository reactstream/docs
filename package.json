    "cli",
    "reactstream",
    "component",
    "development",
    "website"
  ],
  "author": "ReactStream Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reactstream/website/issues"
  },
  "homepage": "https://github.com/reactstream/website#readme",
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1"
  }
}
